{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules",
    "dist",
    "client"
  ],
  "include": [
    "./**/*.ts"
  ]
}
